<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="/styles.css">
  <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';">
</head>
<body>
  <div class="top-bar">
    <div class="top-bar-left">
      <img src="/images/logo.png" alt="Logo" class="logo"> <!-- Use local logo path -->
      <h1>My Website</h1>
    </div>
    <div class="top-bar-center">
      <a href="/home" class="btn">Home</a>
      <a href="/blog" class="btn">Blog</a> <!-- Add Blog button -->
    </div>
    <div class="top-bar-right">
      <a href="/logout" class="btn logout-btn">Logout</a>
    </div>
  </div>
  <div class="container">
    <h1>Admin Panel</h1>
    <p>Welcome, <%= username %>! You have admin privileges.</p>

    <h2>Events</h2>
    <ul>
      <% events.forEach(event => { %>
        <li>
          <div class="event-details">
            <span><%= event.EventName %> - <%= event.EventDate %> - <%= event.RegistrationCount %> registrations</span>
          </div>
          <div class="event-users-grid">
            <% event.users.forEach(user => { %>
              <div class="event-user"><%= user %></div>
            <% }); %>
          </div>
        </li>
      <% }); %>
    </ul>

    <h2>Add New Event</h2>
    <form action="/admin/add-event" method="POST">
      <div class="input-group">
        <input type="text" name="eventName" placeholder="Event Name" required>
      </div>
      <div class="input-group">
        <input type="date" name="eventDate" required>
      </div>
      <button type="submit" class="btn">Add Event</button>
    </form>
  </div>
</body>
</html>