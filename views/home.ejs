<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="top-bar">
    <div class="top-bar-left">
      <img src="/images/logo.png" alt="Logo" class="logo"> <!-- Use local logo path -->
      <h1>My Website</h1>
    </div>
    <div class="top-bar-center">
      <a href="/home" class="btn">Home</a>
      <a href="/blog" class="btn">Blog</a> <!-- Add Blog button -->
    </div>
    <div class="top-bar-right">
      <a href="/profile" class="btn">Profile</a> <!-- Add Profile button -->
      <% if (user && user.isAdmin) { %>
        <a href="/admin" class="btn">Admin Panel</a>
      <% } %>
      <a href="/logout" class="btn logout-btn">Logout</a>
    </div>
  </div>
  <div class="container">
    <h2>Welcome to the Home Page</h2>
    <p>Explore the events available in our community.</p>
    <ul class="event-list">
      <% if (typeof events !== 'undefined' && events.length > 0) { %>
        <% events.forEach(event => { %>
          <li>
            <p><strong><%= event.EventName %></strong></p>
            <p><%= event.EventDate %> at <%= event.EventLocation %></p>
          </li>
        <% }); %>
      <% } else { %>
        <li>No events available.</li>
      <% } %>
    </ul>
  </div>
</body>
</html>